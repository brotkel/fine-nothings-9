{#
/**
 * @file
 * Theme override for a local task link.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper element.
 * - is_active: Whether the task item is an active tab.
 * - link: A rendered link element.
 *
 * Note: This template renders the content for each task item in
 * menu-local-tasks.html.twig.
 *
 * @see template_preprocess_menu_local_task()
 */
#}
{% set classes = 
  [
    'block', 'font-bold', 'mb-2', 'p-0', 'text-sm', is_active ? 'is-active'
  ]
%}

{% set linkClasses = 
  [
    'block', 'bg-gray', 'bg-opacity-30', 'border', 'border-gray', 'px-6', 'py-2', 'no-underline',
    'focus:hover:bg-white', 'dark:focus:hover:bg-black', 'focus:hover:bg-opacity-100', 'focus:hover:border-b-0', 'focus:hover:text-black', 'dark:focus:hover:text-white',
    is_active ? 'bg-white bg-opacity-100 border-b-0 text-black dark:text-white'
  ]
%}

{% set link = link|merge({ '#attributes': { 'class': linkClasses }}) %}

<li{{ attributes.addClass(classes) }}>
  {{ link }}
</li>
